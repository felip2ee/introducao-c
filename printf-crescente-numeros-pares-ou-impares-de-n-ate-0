#include <stdio.h>
#include <stdlib.h>


void crescente(int x){
    int k;
    for(k=0;k<=x;k++){
        if(k==0){
            printf("%d ",k);
        }
        if(x%2==0 && k%2==0 && k!=0){
            printf("%d ",k);
        }
        if(x%2!=0 && k%2!=0 && k!=0){
            printf("%d ",k);
        }
    }
}
void decrescente(int x){
    int k;
    for(k=x;k>=0;k--){
        if(k==0){
            printf("%d ",k);
        }
        if(x%2==0 && k%2==0 && k!=0){
            printf("%d ",k);
        }
        if(x%2!=0 && k%2!=0 && k!=0){
            printf("%d ",k);
        }
    }
}

int main (){
    crescente(80);
}
